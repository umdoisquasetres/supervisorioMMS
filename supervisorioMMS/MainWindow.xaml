<Window x:Class="supervisorioMMS.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:supervisorioMMS"
        xmlns:sys="clr-namespace:System;assembly=mscorlib"
        mc:Ignorable="d"
        Title="SCADA Supervisório" Height="720" Width="1280"
        WindowStartupLocation="CenterScreen"
        Background="#FF1E1E1E">
    <Window.Resources>
        <Style TargetType="Button" x:Key="NavButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="20,15"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3E3E3E"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Header -->
                <Border DockPanel.Dock="Top" Background="#FF007ACC" Padding="15">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Sistema Supervisório SCADA - MMS" Foreground="White" FontSize="24" FontWeight="Bold" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                <Button Grid.Column="1" Content="Salvar Sinótico" Margin="10,0" Padding="10,5" Background="#FF28A745" Foreground="White" Click="SaveSynoptic_Click"/>
                <Button Grid.Column="2" Content="Carregar Sinótico" Margin="10,0" Padding="10,5" Background="#FF007ACC" Foreground="White" Click="LoadSynoptic_Click"/>
            </Grid>
        </Border>

        <!-- Footer -->
        <Border DockPanel.Dock="Bottom" Background="#FF007ACC" Padding="8">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0" Text="Usuário: Admin" Foreground="White" VerticalAlignment="Center" Margin="10,0"/>
                <TextBlock Grid.Column="1" x:Name="StatusText" Text="Pronto" Foreground="LawnGreen" FontWeight="Bold" VerticalAlignment="Center"/>
                <TextBlock Grid.Column="2" Text="{Binding Source={x:Static sys:DateTime.Now}, StringFormat='dd/MM/yyyy HH:mm:ss'}" Foreground="White" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="10,0"/>
            </Grid>
        </Border>

        <!-- Navigation -->
        <Border DockPanel.Dock="Left" Background="{StaticResource SecondaryBackgroundColor}" Width="200">
            <StackPanel>
                <Button x:Name="NavPrincipal" Content="Tela Principal" Click="NavPrincipal_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="NavAlarmes" Content="Alarmes" Click="NavAlarmes_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="NavHistorico" Content="Histórico" Click="NavHistorico_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="NavGraficos" Content="Gráficos" Click="NavGraficos_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="NavConfiguracoes" Content="Configurações" Click="NavConfiguracoes_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="NavUsuarios" Content="Usuários" Click="NavUsuarios_Click" Style="{StaticResource NavButton}"/>
                <Button x:Name="NavTags" Content="Tags" Click="NavTags_Click" Style="{StaticResource NavButton}"/>
            </StackPanel>
        </Border>

        <!-- Main Content -->
        <ContentControl x:Name="MainContent" Margin="20"/>
    </DockPanel>
</Window>